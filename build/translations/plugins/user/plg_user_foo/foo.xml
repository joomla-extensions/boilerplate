<?xml version="1.0" encoding="utf-8"?>
<extension type="plugin" version="3.8" group="user" method="upgrade">
  <name>plg_user_[EXTENSION_ALIAS]</name>
  <version>[RELEASE_VERSION]</version>
  <creationDate>[DATE]</creationDate>

[MANIFEST_COPYRIGHT]

  <description>PLG_USER_[TRANSLATION_KEY]_XML_DESCRIPTION</description>
  <!-- Scripts to run on installation -->
  <scriptfile></scriptfile>
  <!-- Plugin files -->
  <files>
    <filename plugin="foo">foo.php</filename>
  </files>
  <!-- Language files -->
  <languages folder="language">
    <language tag="en-GB">en-GB/en-GB.plg_user_foo.ini</language>
    <language tag="en-GB">en-GB/en-GB.plg_user_foo.sys.ini</language>
  </languages>
  <!-- Config parameter -->
  <config>
    <fields name="params">
      <fieldset name="basic">
        <field name="sample" type="text" default="42" label="PLG_USER_[TRANSLATION_KEY]_SAMPLE_LABEL" description="PLG_USER_[TRANSLATION_KEY]_SAMPLE_DESCRIPTION" />
      </fieldset>
    </fields>
  </config>
  <!-- Update servers -->
  <updateservers>
    <server type="extension" priority="1" name="[EXTENSION_NAME]">[EXTENSION_CDN]/update-plg_user_foo.xml</server>
  </updateservers>
</extension>
