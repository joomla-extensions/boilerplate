<?xml version="1.0" encoding="utf-8" ?>
<extension type="component" method="upgrade">
	<name>COM_JOOMLATHINGS</name>
	<creationDate>[DATE]</creationDate>
	<author>[AUTHOR]</author>
	<authorEmail>[AUTHOR_EMAIL]</authorEmail>
	<authorUrl>[AUTHOR_URL]</authorUrl>
	<copyright>[COPYRIGHT]</copyright>
	<license>GNU General Public License version 2 or later;</license>
	<version>24.0.0</version>
	<description>COM_JOOMLATHINGS_XML_DESCRIPTION</description>
	<namespace>Joomla\Component\Joomlathings</namespace>
	<scriptfile>script.php</scriptfile>
	<install> <!-- Runs on install -->
		<sql>
			<file driver="mysql" charset="utf8">sql/install.mysql.utf8.sql</file>
		</sql>
	</install>
	<uninstall> <!-- Runs on uninstall -->
		<sql>
			<file driver="mysql" charset="utf8">sql/uninstall.mysql.utf8.sql</file>
		</sql>
	</uninstall>
	<update>  <!-- Runs on update -->
		<schemas>
			<schemapath type="mysql">sql/updates/mysql</schemapath>
		</schemas>
	</update>
	<!-- Frond-end files -->
	<files folder="components/com_joomlathings">
		<folder>Controller</folder>
		<folder>Model</folder>
		<folder>View</folder>
		<folder>tmpl</folder>
		<folder>language</folder>
	</files>
    <media folder="media/com_joomlathings" destination="com_joomlathings">
		<folder>js</folder>
    </media>
	<!-- Back-end files -->
	<administration>
		<!-- Menu entries -->
		<menu view="joomlathings">COM_JOOMLATHINGS</menu>
		<submenu>
			<menu link="option=com_joomlathings">COM_JOOMLATHINGS</menu>
			<menu link="option=com_categories&amp;extension=com_joomlathings"
				view="categories" img="class:joomlathings-cat" alt="Joomlathings/Categories">JCATEGORY</menu>
		</submenu>
		<files folder="administrator/components/com_joomlathings">
			<filename>access.xml</filename>
			<filename>joomlathings.xml</filename>
			<filename>config.xml</filename>
			<folder>Controller</folder>
			<folder>Extension</folder>
			<folder>Field</folder>
			<folder>Helper</folder>
			<folder>Model</folder>
			<folder>Rule</folder>
			<folder>Service</folder>
			<folder>Table</folder>
			<folder>View</folder>
			<folder>forms</folder>
			<folder>services</folder>
			<folder>sql</folder>
			<folder>tmpl</folder>
			<folder>language</folder>
		</files>
	</administration>
	<changelogurl>https://raw.githubusercontent.com/astridx/boilerplate/tutorial/changelog.xml</changelogurl>
	<updateservers>
		<server type="extension" name="Joomlathing Updates">https://raw.githubusercontent.com/astridx/boilerplate/tutorial/joomlathing_update.xml</server>
	</updateservers>
	<dlid prefix="dlid=" suffix="" />
</extension>
