<?xml version="1.0" encoding="utf-8" ?>
<extension type="component" version="3.5" method="upgrade">
	<name>COM_FOO</name>
	<creationDate>##DATE##</creationDate>
	<author>[AUTHOR]</author>
	<authorEmail>[AUTHOR_EMAIL]</authorEmail>
	<authorUrl>[AUTHOR_URL]</authorUrl>
	<copyright>[COPYRIGHT]</copyright>
	<license>GNU General Public License version 2 or later; see LICENSE.txt</license>
	<version>##VERSION##</version>
	<description>COM_FOO_XML_DESCRIPTION</description>

	<!-- Scripts to run on installation -->
	<scriptfile>script.php</scriptfile>

	<!-- Runs on install -->
	<install>
		<sql>
			<file driver="mysql" charset="utf8">sql/install/mysql/mysql.sql</file>
		</sql>
	</install>

	<!-- Runs on update -->
	<update>
		<schemas>
			<schemapath type="mysql">sql/updates/mysql</schemapath>
		</schemas>
	</update>

	<!-- Media files -->
	<media folder="media/com_foo" destination="com_foo">
		##MEDIA_FILES##
	</media>

	<!-- Front-end files -->
	<files folder="components/com_foo">
		##FRONTEND_COMPONENT_FILES##
	</files>

	<languages folder="language">
		##FRONTEND_LANGUAGE_FILES##
	</languages>

	<!-- Back-end files -->
	<administration>
		<!-- Menu entries -->
		<menu view="foo">COM_FOO</menu>
		<submenu>
			<!--
				Note that all & must be escaped to &amp; for the file to be valid
				XML and be parsed by the installer
			-->
			<menu link="option=com_foo">COM_FOO</menu>
		</submenu>

		<!-- Core files -->
		<files folder="administrator/components/com_foo">
			##BACKEND_COMPONENT_FILES##
		</files>

		<languages folder="administrator/language">
			##BACKEND_LANGUAGE_FILES##
		</languages>
	</administration>

	<!-- Update servers -->
	<updateservers>
		<server type="extension" priority="1" name="[PROJECT_NAME]">https://www.example.com/foo.xml</server>
	</updateservers>
</extension>
