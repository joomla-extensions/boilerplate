<?xml version="1.0" encoding="utf-8"?>
<form>
	<fields name="filter">
		<field
				name="search"
				type="text"
				hint="JSEARCH_FILTER"
		/>

		<field
				name="published"
				type="status"
				label="JSTATUS"
				description="JFIELD_PUBLISHED_DESC"
				class="advancedSelect"
				onchange="this.form.submit();"
		>
			<option value="">JOPTION_SELECT_PUBLISHED</option>
		</field>
	</fields>

	<fields name="list">
		<field
				name="limit"
				type="limitbox"
				class="input-mini advancedSelect"
				default="25"
				onchange="this.form.submit();"
		/>

		<field
				name="fullordering"
				type="hidden"
		/>
	</fields>
</form>
