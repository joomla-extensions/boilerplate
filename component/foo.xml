  <!-- Public front end files -->
  <files folder="frontend">
    <folder>views</folder>
    <filename>foo.php</filename>
    <filename>controller.php</filename>
  </files>
  <!-- Front end translation files -->
  <languages folder="language/frontend">
    <language tag="en-GB">en-GB/en-GB.com_foo.ini</language>
  </languages>
  <!-- Media files -->
  <media destination="com_foo" folder="media/com_foo">
    <folder>css</folder>
    <folder>images</folder>
    <folder>js</folder>
  </media>
  <!-- Administrator back-end section -->
  <administration>
    <!-- Administration menu -->
    <menu view="app">COM_FOO_NAME</menu>
    <!-- Back-end files -->
    <files folder="backend">
      <folder>helpers</folder>
      <!-- <folder>sql</folder> -->
      <folder>views</folder>
      <filename>foo.php</filename>
      <filename>access.xml</filename>
      <filename>config.xml</filename>
      <filename>controller.php</filename>
    </files>
    <!-- Back-end translation files -->
    <languages folder="language/backend">
      <language tag="en-GB">en-GB/en-GB.com_foo.ini</language>
      <language tag="en-GB">en-GB/en-GB.com_foo.sys.ini</language>
      <language tag="es-ES">es-ES/es-ES.com_foo.ini</language>
      <language tag="es-ES">es-ES/es-ES.com_foo.sys.ini</language>
    </languages>
  </administration>
