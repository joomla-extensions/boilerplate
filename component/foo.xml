<?xml version="1.0" encoding="utf-8" ?>
<extension type="component" version="3.8" method="upgrade">
	<name>COM_FOO</name>
	<creationDate>[DATE]</creationDate>
	<author>[AUTHOR]</author>
	<authorEmail>[AUTHOR_EMAIL]</authorEmail>
	<authorUrl>[AUTHOR_URL]</authorUrl>
	<copyright>[COPYRIGHT]</copyright>
	<license>GNU General Public License version 2 or later; see LICENSE.txt</license>
	<version>1.0</version>
	<description>COM_FOO_XML_DESCRIPTION</description>

	<!-- Scripts to run on installation -->
	<scriptfile>script.php</scriptfile>

	<!-- Runs on install -->
	<install>
		<sql>
			<file driver="mysql" charset="utf8">sql/install/mysql/mysql.sql</file>
		</sql>
	</install>

	<!-- Runs on update -->
	<update>
		<schemas>
			<schemapath type="mysql">sql/updates/mysql</schemapath>
		</schemas>
	</update>

	<!-- Media files -->
	<media folder="media/com_foo" destination="com_foo">
		<folder>css</folder>
		<folder>images</folder>
		<folder>js</folder>
	</media>

	<!-- Front-end files -->
	<files folder="components/com_foo">
		<filename>foo.php</filename>
		<filename>controller.php</filename>
		<folder>controllers</folder>
		<folder>language</folder>
		<folder>layouts</folder>
		<folder>models</folder>
		<folder>views</folder>
	</files>
	<languages folder="components/com_foo">
		<language tag="en-GB">language/en-GB/en-GB.com_foo.ini</language>
	</languages>

	<!-- Back-end files -->
	<administration>
		<!-- Menu entries -->
		<menu view="foo">COM_FOO</menu>
		<submenu>
			<!--
				Note that all & must be escaped to &amp; for the file to be valid
				XML and be parsed by the installer
			-->
			<menu link="option=com_foo">COM_FOO</menu>
		</submenu>

		<!-- Core files -->
		<files folder="administrator/components/com_foo">
			<filename>foo.php</filename>
			<filename>access.xml</filename>
			<filename>config.xml</filename>
			<filename>controller.php</filename>
			<filename>LICENSE.txt</filename>
			<folder>controllers</folder>
			<folder>helpers</folder>
			<folder>language</folder>
			<folder>models</folder>
			<folder>sql</folder>
			<folder>tables</folder>
			<folder>views</folder>
		</files>
		<languages folder="administrator/components/com_foo/language">
        		<language tag="en-GB">en-GB/en-GB.com_foo.ini</language>
                	<language tag="en-GB">en-GB/en-GB.com_foo.sys.ini</language>
		</languages>
	</administration>

	<!-- Update servers -->
	<updateservers>
		<server type="extension" priority="1" name="[PROJECT_NAME]">https://www.example.com/foo.xml</server>
	</updateservers>
</extension>
