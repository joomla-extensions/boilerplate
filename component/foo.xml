  <scriptfile>script.com_foo.php</scriptfile>
  <!-- Update servers -->
  <updateservers>
    <server type="extension" priority="1" name="Foo Name">http://cdn.extly.com/update-foo.xml</server>
  </updateservers>
</extension>
